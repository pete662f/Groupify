@using Groupify.ViewModels.Group
@model Groupify.ViewModels.Room.CompositeRoomViewModel

@{
    ViewData["Title"] = "Room Details";
}

@* Flash messages from join *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row text-center">
    <h2>@Model.RoomDetails.Room.Name</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <h3 class="text-center">Users</h3>
        <ul>
            @foreach (var user in Model.RoomDetails.Room.Users)
            {
                <li>@user.UserName</li>
            }
        </ul>
    </div>
    <div class="col-md-4">
        <h3 class="text-center">Create Groups</h3>
        <form method="post" asp-action="CreateGroups">
            <input type="hidden" asp-for="CreateGroup.RoomId" value="@Model.RoomDetails.Room.Id" />
            <div class="form-group">
                <label asp-for="CreateGroup.GroupSize"></label>
                <input asp-for="CreateGroup.GroupSize" type="number" class="form-control"/>
                <span asp-validation-for="CreateGroup.GroupSize" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
    <div class="col-md-4">
        <h3 class="text-center">Groups</h3>
        <ul>
            @foreach (var group in Model.RoomDetails.Groups)
            {
                <li>@group.Id</li>
                <ul>
                    @foreach (var user in group.Users)
                    {
                        <li>@user.UserName</li>
                    }
                </ul>
            }
        </ul>
    </div>
</div>